<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000" >
	
    
    <Button
        android:id="@+id/button_scanforstb"
        android:textColor="#FFFFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:drawableTop="@drawable/ic_action_search"
        android:text="@string/search_stb_text"
         />


    <se.z_app.zmote.gui.STBListView
        android:id="@+id/list_over_stb"
        android:orientation="vertical"
        android:background="#FF282828"
        android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="#FF747474"
        android:dividerHeight="1dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
         >
    </se.z_app.zmote.gui.STBListView>

    <ProgressBar
        android:id="@+id/progressbar_scan"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_scanforstb"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="44dp" />


</RelativeLayout>
