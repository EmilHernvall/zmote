<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_menu_ly"
    android:layout_width="fill_parent"
    android:layout_height="30dp"
    android:layout_weight="0.18"
    android:contentDescription="@string/button_menu_webtv_description"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/epg_button"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#333333"
        android:drawableTop="@drawable/collections_go_to_today" />

     <Button
         android:id="@+id/remote_button"
         android:drawableTop= "@drawable/ic_dialog_dialer"
         android:layout_width="wrap_content"
         android:layout_height="fill_parent"
         android:layout_weight="1"
         android:background="#333333"
         android:visibility="visible" />

     <Button
         android:id="@+id/webtv_button"
         android:layout_width="wrap_content"
         android:layout_height="fill_parent"
         android:layout_weight="1"
         android:background="#333333"
         android:drawableTop="@drawable/location_web_site" />

     <Button
         android:id="@+id/fav_button"
         android:drawableTop= "@drawable/rating_favourite"
         android:layout_width="wrap_content"
         android:layout_height="fill_parent"
         android:layout_weight="1"
         android:background="#333333" />

    

 </LinearLayout>