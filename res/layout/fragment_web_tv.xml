    <LinearLayout
        android:id="@+id/noSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/result_webtv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="Please enter someting in the search field"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#33B5E5"
        android:orientation="vertical" >
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/search_results_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:orientation="vertical"
            android:scrollbars="vertical" >
        </LinearLayout>
        
    </ScrollView>

    <LinearLayout
        android:id="@+id/playBarLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33B5E5"
        android:orientation="vertical" >
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/play_results_ly"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#F89D1E"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >
        		  
        <ImageButton
            android:id="@+id/previous_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/previous_button"
            android:baselineAlignBottom="false"
            android:contentDescription="@string/search" />
        
        <ImageButton
            android:id="@+id/play_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/play_button"
            android:baselineAlignBottom="false"
            android:contentDescription="@string/search" />
		
        <ImageButton
            android:id="@+id/next_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/next_button"
            android:baselineAlignBottom="false"
            android:contentDescription="@string/search" />
        
    </LinearLayout>

    

